<% include ../partials/heading %>

<div class='container content'>
     <div class="row">
        <div class="col">
            <h1 class="text-center">Create a New Task</h1>
            
            <div class="form-block">
                <form action="/new" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="task[name]" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="due">Due Date</label>
                        <input class="form-control" type="date" id="due" name="task[due]" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                    </div>
                </form>
                
                <a class="btn btn-secondary" href="/">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>