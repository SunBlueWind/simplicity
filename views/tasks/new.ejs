<% include ../partials/heading %>

<div class='container content'>
     <div class="row">
        <div class="col">
            <h1 class="text-center">New Task</h1>
            
            <div class="form-block">
                <form action="/new" method="POST" id='new-form'>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="task[name]" placeholder="Name" required>
                    </div>
                    <div class='form-group'>
                        <label for="channel" form='new-form'>Channel</label>
                        <!--<select class="custom-select" id="channel" name='task[channel]'>-->
                        <!--    <option value="" selected disabled hidden>Choose Channel</option>-->
                        <!--    <option value="Personal">Personal</option>-->
                        <!--    <option value="Work">Work</option>-->
                        <!--</select>-->
                        <input class='form-control' id='channel' name='task[channel]' list='channels' placeholder='Choose or Create Your Own' required>
                        <datalist id='channels'>
                            <% channels.forEach(function(channel) { %>
                                <option value='<%= channel.name %>'></option>
                            <% }); %>
                        </datalist>
                    </div>
                    <div class="form-group">
                        <label for="due">Due Date</label>
                        <input class="form-control" type="date" id="due" name="task[due]" required>
                    </div>
                    <div class="form-group">
                        <label for="notes">Notes</label>
                        <textarea class="form-control" id="notes" name="task[notes]" placeholder="Enter your notes (optional)"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                    </div>
                </form>
                
                <a class="btn btn-secondary" href="javascript:history.back()">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>