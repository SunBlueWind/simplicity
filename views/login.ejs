<% include ../partials/heading %>

<div class='container content'>
     <div class="row">
        <div class="col">
            <h1 class="text-center">Login</h1>
            
            <div class="form-block">
                <form action="/index" method="GET" id='new-form'>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="user[username]" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="user[password]" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                    </div>
                </form>
                <a class="btn btn-secondary" href="/">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>